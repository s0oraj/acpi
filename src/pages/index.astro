<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    font-family: system-ui, -apple-system, sans-serif;
    line-height: 1.6;
    color: #333;
  }

  .main-title {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 2rem;
    color: #1a1a1a;
  }

  .image-container {
    text-align: center;
    margin: 2rem 0;
  }

  .header-image {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .content {
    font-size: 1.1rem;
  }

  .intro {
    font-size: 1.2rem;
    margin: 2rem 0;
    color: #555;
  }

  h2 {
    font-size: 2rem;
    margin: 3rem 0 1.5rem;
    color: #2c3e50;
    border-bottom: 2px solid #eee;
    padding-bottom: 0.5rem;
  }

  .toc {
    list-style-type: decimal;
    padding-left: 2rem;
  }

  .toc li {
    margin: 0.5rem 0;
  }

  .toc a {
    color: #3498db;
    text-decoration: none;
    transition: color 0.2s;
  }

  .toc a:hover {
    color: #2980b9;
    text-decoration: underline;
  }

  .guide {
    list-style-type: disc;
    padding-left: 2rem;
    margin: 1.5rem 0;
  }

  .guide li {
    margin: 0.5rem 0;
    color: #555;
  }

  /* Print-specific styles */
  @media print {
    .container {
      max-width: none;
      padding: 0;
    }

    .header-image {
      max-width: 600px;
      height: auto;
    }

    h2 {
      break-before: page;
    }

    a {
      text-decoration: none;
      color: #000;
    }
  }
</style>
